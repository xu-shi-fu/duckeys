<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:orientation="vertical"
    tools:context=".ui.activities.SimplePadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_select_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调" />

        <Button
            android:id="@+id/button_select_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调式" />

        <Button
            android:id="@+id/button_select_chord_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="根音" />

        <Button
            android:id="@+id/button_select_chord_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和弦" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--
    <com.github.xushifustudio.libduckeys.ui.views.MidiPadView
        android:id="@+id/midi_pad_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
        -->

    <SurfaceView
        android:id="@+id/surface_view_pad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:keepScreenOn="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>