<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DebugActivity">


    <Button
        android:id="@+id/button_piano_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Piano Keyboard" />


    <Button
        android:id="@+id/button_midi_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MIDI Connection" />

    <Button
        android:id="@+id/button_bluetooth_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bluetooth Scan" />

    <Button
        android:id="@+id/button_show_current_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Current Device" />

</LinearLayout>
